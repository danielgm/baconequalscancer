{
  "manifest_version": 2,

  "name": "baconiscancer",
  "description": "Chrome extension to remind you bacon is cancer in webpage text. )-:",
  "version": "0.0.1",

  "icons": {
    "16":  "icon-16.png",
    "48":  "icon-48.png",
    "128": "icon-128.png"
  },

  "permissions": [
    "tabs", "webNavigation", "activeTab",
    "storage",
    "https://ajax.googleapis.com/"
  ],

  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["jquery-2.1.1.min.js", "replace.js"],
    "run_at": "document_idle"
  }]
}
